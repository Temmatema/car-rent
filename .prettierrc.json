{
  "semi": true,
  "singleQuote": false,
  "useTabs": false,
  "printWidth": 80,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
